.signup_wrapper
  = link_to image_tag(asset_path('/assets/logo/logo.png'), class: 'signup_wrapper__image'), root_path
  .signup_wrapper__form
    %h2.title 住所情報登録
    .form
      = form_for(@address, url: addresses_path, method: :post)   do |f|
        .field
          = f.label :zipcode ,class: 'form__label'
          %span 郵便番号
          = f.text_field :zipcode, autofocus: true, autocomplete: "zipcode",class:'form__field'

        .field
          = f.label :prefectures ,class: 'form__label'
          %span 都道府県
          %br/
          =f.select :prefectures,["北海道","青森県","岩手県","宮城県","秋田県","山形県","福島県","茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県","新潟県","富山県","石川県","福井県","山梨県","長野県","岐阜県","静岡県","愛知県","三重県","滋賀県","京都府","大阪府","兵庫県","奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県","徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県","熊本県","大分県","宮崎県","鹿児島県","沖縄県"],pronpt:"洗濯してください",class:'form__select'

        .field
          = f.label :municipalities ,class: 'form__label'
          %span 市町村
          =f.text_field :municipalities,  autocomplete: "municipalities",class:'form__field'

        .field
          = f.label :address ,class: 'form__label'
          %span 番地
          = f.text_field :address,  autocomplete: "address",class:'form__field'

        .field
          = f.label :building ,class: 'form__label'
          %span 建物
          = f.text_field :building,  autocomplete: "building",class:'form__field'

        .actions
          = f.submit "保存" ,class:'actions__submit'

      = link_to "新規登録", new_user_registration_path,class:'form__link' 